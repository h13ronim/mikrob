%html
  %head
    %meta{ :content => "text/html; charset=utf-8", "http-equiv" => "content-type" }
    %link{ :href => "style.css", :rel => "stylesheet", :type => "text/css", :media => "screen", :charset => "utf-8" }
    %link{ :href => "win32.css", :rel => "stylesheet", :type => "text/css", :media => "screen", :charset => "utf-8" }
    %link{ :href => "linux.css", :rel => "stylesheet", :type => "text/css", :media => "screen", :charset => "utf-8" }
    %title
      Image
    %script{ :src => "libs/prototype.js", :type => "text/javascript" }
    %script{ :type => "text/javascript", :charset => "utf-8" }
      document.observe('dom:loaded',function(){
      var image_url = Titanium.API.get('image_url');
      var loader = $('cont').down('img',0);
      var img = $('cont').down('img',1);
      img.toggle();
      img.setAttribute('src', image_url);
      function resize_window() {
      var win = Titanium.UI.getCurrentWindow();
      
      win.width = img.width;
      win.height = img.height;
      img.toggle();
      loader.toggle();
      win.setResizable(false);
      
      }
      resize_window.delay(1);
      
      
      });
  %body
    #cont
      %img#big_load{ :src => "app://icons/big_load.gif", :alt => "Loading" }
      %img{ :src => "", :alt => "Obrazek" }
